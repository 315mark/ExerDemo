<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="安装与升级">
        <SwitchPreference
            android:key="key_smart_install"
            android:title="智能安装"
            android:summary="支持Android4.1以上,无须Root"
            android:defaultValue="true"
            android:layout="@layout/preference_item" />

        <SwitchPreference
            android:key="key_root_install"
            android:title="自动安装"
            android:summary="仅限Root用户须Root"
            android:defaultValue="true" />

        <SwitchPreference
            android:key="key_auto_delete_apk"
            android:defaultValue="false"
            android:title="安装完成后删除安装包" />

        <SwitchPreference
            android:key="key_auto_check_apk_update"
            android:defaultValue="true"
            android:title="自动检测可升级应用"
            android:summary="此功能会把你安装的应用列表发送到菜鸟窝服务器，用来查找最新版本的应用" />

    </PreferenceCategory>

    <PreferenceCategory android:title="基本设置">
        <Preference
            android:key="key_clear_cache"
            android:title="清理缓存"
            android:summary="安装包,图片等缓存"
            android:layout="@layout/preference_item" />

        <Preference
            android:key="key_apk_download_dir"
            android:title="安装包下载目录"
            android:summary="默认目录" />

    </PreferenceCategory>

    <Preference
        android:key="key_about"
        android:title="关于菜鸟手机助手"
        android:summary="版本:1.0.21" />

</PreferenceScreen>